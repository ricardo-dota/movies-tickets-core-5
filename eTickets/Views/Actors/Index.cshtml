@* Define the model *@
@model IEnumerable<Actor>

@* Define ViewData *@

@{
    ViewData["Titulo"] = "Lista de Actores";
 }

@* White code *@

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

          

                    @foreach (var item in ViewBag.actores)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px" />
                            </td>
                            <td class="align-middle">
                                @item.FullName
                            </td>
                            <td class="align-middle">
                                @item.Bio
                            </td>

                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-controller="Actors" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="badge-info bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-outline-info" asp-controller="Actors" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="badge-info bi-pencil-eye"></i> Detail
                                </a>
                                <a class="btn btn-outline-danger" asp-controller="Actors" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="badge-info bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                

            </tbody>

        </table>
    </div>
</div>

<div class="text-white">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
        <i class="bi-pencil-eye bi-plus-circle"></i> Añadir Actor
    </a>
</div>